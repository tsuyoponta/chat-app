<div class="main-chat-top">
  <div class="groups">
    <div class="group-name">
      hogefuga
    </div>
  </div>
  <div claas="chat-exit">
    <div class="exit-button">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="main-chat-center">
  <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], class: 'main-chat-bottom', local: true do |f| %>
  <div class="chat-form">
    <%= f.text_field :content, class: 'form-text', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-button' %>
<% end %>